@model List<DoAnCoSo.Models.SANPHAM>
@{
    ViewBag.Title = "Trang sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    div#sps {
        padding: 0px 15px;
       
    }

    #sps img {
        width: 100%;
    }


    h4 {
        margin: 20px 0;
        margin-top: 40px;
    }

    h6 {
        margin: 8px 0 0 0;
    }

    a {
        color: black;
        text-decoration: none;
    }

    .sp div:hover img {
        transform: scale(1.1,1.1);
        transition: all 1s ease;
    }

    #banner2 {
        margin-top: 40px;
    }

        #banner2 img {
            width: 100%;
            height: 100%;
            padding: 0px;
        }
    #luachon{
        margin-top: 30px;
        text-align:left;
     
    }
    #sanpham {
        text-align: center;
        margin-bottom: 30px;
    }
</style>
<div name="sps" id="sps">
    <select id="luachon">
        <option>Giá thấp đến cao</option>
        <option>Giá cao đến thấp</option>
    </select>
    <div name="banchay" class="row" id="sanpham">
        <div style="height:20px"></div>
        @Html.Partial("_ProductList", Model)
    </div>
</div>
<script>
        var selectE = document.querySelector('select');
        selectE.onchange = () => {
            var giatri = selectE.value;
            localStorage.setItem('vuachon', selectE.value);
            window.location.href = `/Product/allProduct?i=${encodeURIComponent(giatri)}`;
    }
    window.onload = () => {
        var vuachon = localStorage.getItem('vuachon');
        if (vuachon) {
            document.querySelector('select').value = vuachon;
        }
    }


    
</script>